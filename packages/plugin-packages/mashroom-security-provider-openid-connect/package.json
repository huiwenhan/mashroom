{
    "name": "@mashroom/mashroom-security-provider-openid-connect",
    "description": "OpenID Connect security provider",
    "homepage": "https://www.mashroom-server.com",
    "repository": "github:nonblocking/mashroom",
    "license": "MIT",
    "version": "1.4.2",
    "files": [
        "dist/**"
    ],
    "dependencies": {
        "openid-client": "^3.14.0",
        "request": "^2.88.2",
        "request-promise-native": "^1.0.8"
    },
    "devDependencies": {
        "@babel/cli": "^7.8.4",
        "@mashroom/mashroom": "1.4.2",
        "@mashroom/mashroom-security": "1.4.2",
        "@mashroom/mashroom-utils": "1.4.2",
        "@types/express": "^4.17.3",
        "@types/jest": "^25.1.4",
        "@types/request-promise-native": "^1.0.17",
        "eslint": "^6.8.0",
        "express": "^4.17.1",
        "jest": "^25.1.0",
        "typescript": "^3.8.3"
    },
    "jest": {
        "verbose": true,
        "testEnvironment": "node",
        "roots": [
            "<rootDir>/test"
        ],
        "testRegex": "(\\.(test|spec))\\.ts"
    },
    "scripts": {
        "lint": "eslint src --ext '.ts' --fix",
        "type-check": "tsc --noEmit",
        "test": "jest --passWithNoTests",
        "build": "babel src --extensions '.ts' -d dist"
    },
    "mashroom": {
        "devModeBuildScript": "build",
        "plugins": [
            {
                "name": "Mashroom OpenID Connect Security Provider",
                "type": "security-provider",
                "bootstrap": "./dist/security-provider/mashroom-bootstrap.js",
                "requires": [
                    "Mashroom Session Middleware"
                ],
                "defaultConfig": {
                    "mode": "OIDC",
                    "issuerDiscoveryUrl": null,
                    "issuerMetadata": null,
                    "scope": "openid email profile",
                    "clientId": "mashroom",
                    "clientSecret": "your-client-secret",
                    "redirectUrl": "http://localhost:5050/openid-connect-cb",
                    "responseType": "code",
                    "usePKCE": "false",
                    "extraAuthParams": {},
                    "rolesClaimName": "roles",
                    "adminRoles": [
                        "mashroom-admin"
                    ]
                }
            },
            {
                "name": "Mashroom OpenID Connect Security Provider Callback",
                "type": "api",
                "bootstrap": "./dist/callback/mashroom-bootstrap.js",
                "requires": [],
                "defaultConfig": {
                    "path": "/openid-connect-cb"
                }
            }
        ]
    }
}
