{
    "parser": "babel-eslint",
    "plugins": [
        "flowtype"
    ],
    "extends": [
        "eslint:recommended",
        "plugin:flowtype/recommended"
    ],
    "env": {
        "node": false,
        "browser": true,
        "es6": true
    },
    "globals": {
        "global": true
    },
    "rules": {
        "quotes": ["error", "single", { "allowTemplateLiterals": true }],
        "prefer-template": "error",
        "prefer-object-spread": "error",
        "no-console": "off",
        "no-prototype-builtins": "off"
    }
}
