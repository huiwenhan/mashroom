{
    "name": "@mashroom/mashroom-storage",
    "description": "A storage service with a configurable provider",
    "homepage": "https://www.mashroom-server.com",
    "repository": "github:nonblocking/mashroom",
    "license": "MIT",
    "version": "1.4.1",
    "files": [
        "dist/**",
        "type-definitions/*"
    ],
    "dependencies": {
        "@mashroom/mashroom-utils": "1.4.1"
    },
    "devDependencies": {
        "@babel/cli": "^7.8.4",
        "@mashroom/mashroom": "1.4.1",
        "eslint": "^6.8.0",
        "jest": "^25.1.0"
    },
    "jest": {
        "verbose": true,
        "testEnvironment": "node",
        "roots": [
            "<rootDir>/test"
        ],
        "testRegex": "(\\.(test|spec))\\.js$"
    },
    "scripts": {
        "lint": "eslint src --fix",
        "build": "babel src -d dist"
    },
    "mashroom": {
        "devModeBuildScript": "build",
        "plugins": [
            {
                "name": "Mashroom Storage Services",
                "type": "services",
                "namespace": "storage",
                "bootstrap": "./dist/services/mashroom-bootstrap-services.js",
                "defaultConfig": {
                    "provider": "Mashroom Storage Filestore Provider"
                }
            },
            {
                "name": "Mashroom Storage Provider Loader",
                "type": "plugin-loader",
                "bootstrap": "./dist/plugins/loader/mashroom-bootstrap-storage-provider-plugin-loader.js",
                "loads": "storage-provider"
            }
        ]
    }
}
