{
    "name": "@mashroom/mashroom-security-provider-simple",
    "description": "Simple JSON file based security provider",
    "homepage": "https://www.mashroom-server.com",
    "repository": "github:nonblocking/mashroom",
    "license": "MIT",
    "version": "1.1.1",
    "files": [
        "dist/**",
        "type-definitions/*"
    ],
    "dependencies": {
        "sha.js": "^2.4.11"
    },
    "devDependencies": {
        "@babel/cli": "^7.6.0",
        "@mashroom/mashroom": "1.1.1",
        "@mashroom/mashroom-security": "1.1.1",
        "@mashroom/mashroom-utils": "1.1.1",
        "eslint": "^6.4.0",
        "express": "^4.17.1",
        "jest": "^24.9.0"
    },
    "jest": {
        "verbose": true,
        "testEnvironment": "node",
        "roots": [
            "<rootDir>/test"
        ],
        "testRegex": "(\\.(test|spec))\\.js$"
    },
    "scripts": {
        "lint": "eslint src test --fix",
        "test": "jest",
        "build": "babel src -d dist"
    },
    "mashroom": {
        "devModeBuildScript": "build",
        "plugins": [
            {
                "name": "Mashroom Security Simple Provider",
                "type": "security-provider",
                "bootstrap": "./dist/mashroom-bootstrap.js",
                "requires": [
                    "Mashroom Session Middleware"
                ],
                "defaultConfig": {
                    "users": "./users.json",
                    "loginPage": "/login",
                    "authenticationTimeoutSec": 1200
                }
            }
        ]
    }
}
