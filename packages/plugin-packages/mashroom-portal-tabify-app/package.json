{
    "name": "@mashroom/mashroom-portal-tabify-app",
    "description": "App that turns an app area into a tabbed dialog",
    "homepage": "https://www.mashroom-server.com",
    "repository": "github:nonblocking/mashroom",
    "license": "MIT",
    "version": "1.1.3",
    "sideEffects": false,
    "files": [
        "dist/**"
    ],
    "devDependencies": {
        "@babel/cli": "^7.6.0",
        "@mashroom/mashroom-portal": "1.1.3",
        "eslint": "^6.4.0",
        "jest": "^24.9.0",
        "react": "^16.9.0",
        "react-dom": "^16.9.0",
        "webpack": "^4.39.3",
        "webpack-cli": "^3.3.8",
        "webpack-dev-server": "^3.8.0"
    },
    "jest": {
        "verbose": true,
        "testEnvironment": "node",
        "roots": [
            "<rootDir>/test"
        ],
        "testRegex": "(\\.(test|spec))\\.js$"
    },
    "scripts": {
        "lint": "eslint src",
        "dev": "webpack-dev-server --mode development --hot",
        "build": "webpack --mode production --display-error-details"
    },
    "mashroom": {
        "devModeBuildScript": "build",
        "plugins": [
            {
                "name": "Mashroom Portal Tabify App",
                "type": "portal-app",
                "bootstrap": "startPortalTabifyApp",
                "category": "Layout",
                "resources": {
                    "js": [
                        "bundle.js"
                    ],
                    "css": []
                },
                "defaultConfig": {
                    "resourcesRoot": "./dist",
                    "appConfig": {
                        "addCloseButtons": false,
                        "pluginNameTitleMapping": {
                            "My App Plugin": "My fabulous app"
                        }
                    }
                }
            }
        ]
    }
}
