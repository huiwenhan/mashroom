{
    "name": "@mashroom/mashroom-csrf-protection",
    "description": "Mashroom CSRF protection middleware and services",
    "homepage": "https://www.mashroom-server.com",
    "repository": "github:nonblocking/mashroom",
    "license": "MIT",
    "version": "1.4.5",
    "files": [
        "dist/**",
        "type-definitions/*"
    ],
    "dependencies": {
        "csrf": "^3.1.0"
    },
    "devDependencies": {
        "@mashroom/mashroom": "1.4.5",
        "@mashroom/mashroom-utils": "1.4.5",
        "@babel/cli": "^7.8.4",
        "eslint": "^7.0.0",
        "jest": "^26.0.1"
    },
    "jest": {
        "verbose": true,
        "testEnvironment": "node",
        "roots": [
            "<rootDir>/test"
        ],
        "testRegex": "(\\.(test|spec))\\.js$"
    },
    "scripts": {
        "lint": "eslint src test --fix",
        "test": "jest",
        "build": "babel src -d dist"
    },
    "mashroom": {
        "devModeBuildScript": "build",
        "plugins": [
            {
                "name": "Mashroom CSRF Services",
                "type": "services",
                "namespace": "csrf",
                "bootstrap": "./dist/services/mashroom-bootstrap-services.js",
                "requires": [
                    "Mashroom Session Middleware"
                ],
                "defaultConfig": {
                    "saltLength": 8,
                    "secretLength": 18
                }
            },
            {
                "name": "Mashroom CSRF Middleware",
                "type": "middleware",
                "bootstrap": "./dist/middleware/mashroom-bootstrap-middleware.js",
                "requires": [
                    "Mashroom CSRF Services"
                ],
                "defaultConfig": {
                    "order": 100,
                    "safeMethods": [
                        "GET",
                        "HEAD",
                        "OPTIONS"
                    ]
                }
            }
        ]
    }
}
