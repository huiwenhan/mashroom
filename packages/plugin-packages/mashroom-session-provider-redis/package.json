{
    "name": "@mashroom/mashroom-session-provider-redis",
    "description": "Mashroom Server Redis provider",
    "homepage": "https://www.mashroom-server.com",
    "repository": "github:nonblocking/mashroom",
    "license": "MIT",
    "version": "1.0.0",
    "files": [
        "dist/**",
        "type-definitions/*"
    ],
    "dependencies": {
        "redis": "^2.8.0",
        "connect-redis": "^4.0.3"
    },
    "devDependencies": {
        "@babel/cli": "^7.6.4",
        "@mashroom/mashroom": "^1.1.4",
        "@mashroom/mashroom-session": "^1.1.4",
        "eslint": "^6.6.0",
        "express": "^4.17.1"
    },
    "scripts": {
        "lint": "eslint src --fix",
        "build": "babel src -d dist"
    },
    "mashroom": {
        "devModeBuildScript": "build",
        "plugins": [
            {
                "name": "Mashroom Session Redis Provider",
                "type": "session-store-provider",
                "bootstrap": "./dist/mashroom-bootstrap.js",
                "defaultConfig": {
                    "host": "localhost",
                    "port": "6379",
                    "prefix": "mashroom:",
                    "connect_timeout": 1000
                }
            }
        ]
    }
}
