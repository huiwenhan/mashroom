{
    "name": "@mashroom/mashroom-session-provider-redis",
    "description": "Mashroom Server Redis provider",
    "homepage": "https://www.mashroom-server.com",
    "repository": "github:nonblocking/mashroom",
    "license": "MIT",
    "version": "1.4.5",
    "files": [
        "dist/**"
    ],
    "dependencies": {
        "connect-redis": "^4.0.4",
        "ioredis": "^4.16.0"
    },
    "devDependencies": {
        "@babel/cli": "^7.8.4",
        "@mashroom/mashroom": "1.4.5",
        "@mashroom/mashroom-session": "1.4.5",
        "eslint": "^6.8.0",
        "express": "^4.17.1",
        "@types/express": "^4.17.6",
        "@types/express-session": "^1.17.0",
        "@types/connect-redis": "^0.0.13",
        "@types/ioredis": "^4.16.1",
        "typescript": "^3.8.3"
    },
    "scripts": {
        "lint": "eslint  src --ext '.ts' --fix",
        "type-check": "tsc --noEmit",
        "build": "babel src -d dist --extensions '.ts'"
    },
    "mashroom": {
        "devModeBuildScript": "build",
        "plugins": [
            {
                "name": "Mashroom Session Redis Provider",
                "type": "session-store-provider",
                "bootstrap": "./dist/mashroom-bootstrap.js",
                "defaultConfig": {
                    "redisOptions": {
                        "host": "localhost",
                        "port": "6379",
                        "keyPrefix": "mashroom:",
                        "maxRetriesPerRequest": 3,
                        "enableOfflineQueue": false,
                        "lazyConnect": true
                    },
                    "cluster": false,
                    "clusterNodes": null,
                    "clusterOptions": null
                }
            }
        ]
    }
}
