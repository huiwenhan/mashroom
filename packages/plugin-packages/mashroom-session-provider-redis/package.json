{
    "name": "@mashroom/mashroom-session-provider-redis",
    "description": "Mashroom Server Redis provider",
    "homepage": "https://www.mashroom-server.com",
    "repository": "github:nonblocking/mashroom",
    "license": "MIT",
    "version": "1.4.4",
    "files": [
        "dist/**"
    ],
    "dependencies": {
        "connect-redis": "^4.0.4",
        "ioredis": "^4.16.0"
    },
    "devDependencies": {
        "@babel/cli": "^7.8.4",
        "@mashroom/mashroom": "1.4.4",
        "@mashroom/mashroom-session": "1.4.4",
        "eslint": "^6.8.0",
        "express": "^4.17.1"
    },
    "scripts": {
        "lint": "eslint src --fix",
        "build": "babel src -d dist"
    },
    "mashroom": {
        "devModeBuildScript": "build",
        "plugins": [
            {
                "name": "Mashroom Session Redis Provider",
                "type": "session-store-provider",
                "bootstrap": "./dist/mashroom-bootstrap.js",
                "defaultConfig": {
                    "redisOptions": {
                        "host": "localhost",
                        "port": "6379",
                        "keyPrefix": "mashroom:",
                        "maxRetriesPerRequest": 3,
                        "enableOfflineQueue": false,
                        "lazyConnect": true
                    },
                    "cluster": false,
                    "clusterNodes": null,
                    "clusterOptions": null
                }
            }
        ]
    }
}
