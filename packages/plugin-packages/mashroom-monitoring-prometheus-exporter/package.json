{
    "name": "@mashroom/mashroom-monitoring-prometheus-exporter",
    "description": "Exports Mashroom metrics for the Prometheus monitoring system",
    "homepage": "https://www.mashroom-server.com",
    "repository": "github:nonblocking/mashroom",
    "license": "MIT",
    "version": "1.0.0",
    "files": [
        "dist/**"
    ],
    "dependencies": {
        "express": "^4.17.1",
        "prom-client": "^12.0.0"
    },
    "optionalDependencies": {
        "prometheus-gc-stats": "^0.6.2"
    },
    "devDependencies": {
        "@mashroom/mashroom": "1.4.5",
        "@babel/cli": "^7.8.4",
        "eslint": "^7.0.0",
        "typescript": "^3.9.2",
        "@types/express": "^4.17.6",
        "@types/jest": "^25.2.2",
        "jest": "^26.0.1"
    },
    "jest": {
        "verbose": true,
        "testEnvironment": "node",
        "roots": [
            "<rootDir>/test"
        ],
        "testRegex": "(\\.(test|spec))\\.ts"
    },
    "scripts": {
        "lint": "eslint src --ext '.ts' --fix",
        "type-check": "tsc --noEmit",
        "test": "jest --passWithNoTests",
        "build": "babel src -d dist --extensions '.ts'"
    },
    "mashroom": {
        "devModeBuildScript": "build",
        "plugins": [
            {
                "name": "Mashroom Monitoring Prometheus Exporter Webapp",
                "type": "web-app",
                "bootstrap": "./dist/mashroom-bootstrap-webapp.js",
                "requires": [

                ],
                "defaultConfig": {
                    "path": "/metrics",
                    "enableGcStats": true
                }
            }
        ]
    }
}
