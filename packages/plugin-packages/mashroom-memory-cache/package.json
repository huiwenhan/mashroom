{
    "name": "@mashroom/mashroom-memory-cache",
    "description": "A memory cache service with pluggable providers",
    "homepage": "https://www.mashroom-server.com",
    "repository": "github:nonblocking/mashroom",
    "license": "MIT",
    "version": "1.0.0",
    "files": [
        "dist/**",
        "type-definitions/*"
    ],
    "dependencies": {
        "node-cache": "^5.1.0"
    },
    "devDependencies": {
        "@mashroom/mashroom": "1.4.5",
        "@mashroom/mashroom-monitoring-metrics-collector": "1.0.0",
        "@babel/cli": "^7.8.4",
        "eslint": "^7.0.0",
        "express": "^4.17.1",
        "@types/jest": "^25.2.2",
        "typescript": "^3.8.3",
        "jest": "26.0.1"
    },
    "scripts": {
        "lint": "eslint src test --ext '.ts' --fix",
        "type-check": "tsc --noEmit",
        "test": "jest",
        "build": "babel src -d dist --extensions '.ts'"
    },
    "mashroom": {
        "devModeBuildScript": "build",
        "plugins": [
            {
                "name": "Mashroom Memory Cache Services",
                "type": "services",
                "namespace": "memorycache",
                "bootstrap": "./dist/services/mashroom-bootstrap-services.js",
                "defaultConfig": {
                    "provider": "local",
                    "defaultTTLSec": 10
                }
            },
            {
                "name": "Mashroom Memory Cache Provider Loader",
                "type": "plugin-loader",
                "bootstrap": "./dist/plugins/loader/mashroom-bootstrap-plugin-loader.js",
                "loads": "memory-cache-provider"
            }
        ]
    }
}
