{
    "name": "@mashroom/mashroom-portal-demo-angular-app",
    "description": "Simple Angular 8 based app that integrates into the Portal",
    "homepage": "https://www.mashroom-server.com",
    "repository": "github:nonblocking/mashroom",
    "license": "MIT",
    "version": "1.3.2",
    "files": [
        "dist/**"
    ],
    "devDependencies": {
        "@angular-devkit/build-angular": "^0.900.7",
        "@angular/cli": "^9.0.7",
        "@angular/common": "^9.0.7",
        "@angular/compiler": "^9.0.7",
        "@angular/compiler-cli": "^9.0.7",
        "@angular/core": "^9.0.7",
        "@angular/forms": "^9.0.7",
        "@angular/language-service": "^9.0.7",
        "@angular/platform-browser": "^9.0.7",
        "@angular/platform-browser-dynamic": "^9.0.7",
        "@mashroom/mashroom-portal": "1.3.2",
        "@types/node": "^13.9.2",
        "core-js": "^3.6.4",
        "zone.js": "^0.10.3",
        "rxjs": "^6.5.4",
        "tslint": "^6.1.0",
        "typescript": "3.7.5"
    },
    "scripts": {
        "dev": "ng serve",
        "build": "ng build --prod=true",
        "lint": "ng lint",
        "type-check": "tsc --noEmit"
    },
    "mashroom": {
        "devModeBuildScript": "build",
        "plugins": [
            {
                "name": "Mashroom Portal Demo Angular App",
                "title": "Demo Angular App",
                "type": "portal-app",
                "bootstrap": "startAngularDemoApp",
                "category": "Demo",
                "sharedResources": {
                    "js": [
                        "zonejs.js"
                    ]
                },
                "resources": {
                    "js": [
                        "runtime.js",
                        "main.js"
                    ],
                    "css": [
                        "styles.css"
                    ]
                },
                "defaultConfig": {
                    "resourcesRoot": "./dist",
                    "restProxies": {},
                    "appConfig": {
                        "firstName": "Adam"
                    }
                }
            }
        ]
    }
}
