{
    "name": "@mashroom/mashroom-portal-demo-angular-app",
    "description": "Simple Angular 8 based app that integrates into the Portal",
    "homepage": "https://www.mashroom-server.com",
    "repository": "github:nonblocking/mashroom",
    "license": "MIT",
    "version": "1.3.1",
    "files": [
        "dist/**"
    ],
    "devDependencies": {
        "@angular-devkit/build-angular": "^0.803.23",
        "@angular/cli": "^8.3.23",
        "@angular/common": "^8.2.14",
        "@angular/compiler": "^8.2.14",
        "@angular/compiler-cli": "^8.2.14",
        "@angular/core": "^8.2.14",
        "@angular/forms": "^8.2.14",
        "@angular/language-service": "^8.2.14",
        "@angular/platform-browser": "^8.2.14",
        "@angular/platform-browser-dynamic": "^8.2.14",
        "@mashroom/mashroom-portal": "1.3.1",
        "@types/node": "^8.10.59",
        "core-js": "^3.6.4",
        "rxjs": "^6.5.4",
        "tslint": "^5.20.1",
        "typescript": "^3.7.5",
        "zone.js": "^0.10.2"
    },
    "scripts": {
        "dev": "ng serve",
        "build": "ng build --prod=true",
        "lint": "ng lint",
        "type-check": "tsc --noEmit"
    },
    "mashroom": {
        "devModeBuildScript": "build",
        "plugins": [
            {
                "name": "Mashroom Portal Demo Angular App",
                "title": "Demo Angular App",
                "type": "portal-app",
                "bootstrap": "startAngularDemoApp",
                "category": "Demo",
                "resources": {
                    "js": [
                        "polyfills.js",
                        "runtime.js",
                        "main.js"
                    ],
                    "css": [
                        "styles.css"
                    ]
                },
                "defaultConfig": {
                    "resourcesRoot": "./dist",
                    "restProxies": {},
                    "appConfig": {
                        "firstName": "Adam"
                    }
                }
            }
        ]
    }
}
