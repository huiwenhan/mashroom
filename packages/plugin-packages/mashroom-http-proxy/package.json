{
    "name": "@mashroom/mashroom-http-proxy",
    "description": "Mashroom http proxy service",
    "homepage": "https://www.mashroom-server.com",
    "repository": "github:nonblocking/mashroom",
    "license": "MIT",
    "version": "1.0.94",
    "files": [
        "dist/**",
        "type-definitions/*"
    ],
    "dependencies": {
        "request": "^2.88.0"
    },
    "devDependencies": {
        "@babel/cli": "^7.6.0",
        "@mashroom/mashroom": "1.0.94",
        "@mashroom/mashroom-utils": "1.0.94",
        "eslint": "^6.4.0",
        "jest": "^24.9.0",
        "nock": "^11.3.3"
    },
    "jest": {
        "verbose": true,
        "testEnvironment": "node",
        "roots": [
            "<rootDir>/test"
        ],
        "testRegex": "(\\.(test|spec))\\.js$"
    },
    "scripts": {
        "lint": "eslint src test --fix",
        "test": "jest",
        "build": "babel src -d dist"
    },
    "mashroom": {
        "devModeBuildScript": "build",
        "plugins": [
            {
                "name": "Mashroom Http Proxy Services",
                "type": "services",
                "namespace": "proxy",
                "bootstrap": "./dist/mashroom-bootstrap-services.js",
                "defaultConfig": {
                    "forwardMethods": [
                        "GET",
                        "POST",
                        "PUT",
                        "DELETE"
                    ],
                    "forwardHeaders": [
                        "accept",
                        "accept-encoding",
                        "expires",
                        "cache-control",
                        "content-type",
                        "content-encoding"
                    ],
                    "rejectUntrustedCerts": false,
                    "poolMaxSockets": 10,
                    "socketTimeoutMs": 30000
                }
            }
        ]
    }
}
