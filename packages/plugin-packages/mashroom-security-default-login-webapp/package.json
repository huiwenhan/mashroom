{
    "name": "@mashroom/mashroom-security-default-login-webapp",
    "description": "The default login webapp, that will be available at /login",
    "homepage": "https://www.mashroom-server.com",
    "repository": "github:nonblocking/mashroom",
    "license": "MIT",
    "version": "1.1.0",
    "files": [
        "dist/**",
        "public/**",
        "views/**"
    ],
    "dependencies": {
        "body-parser": "^1.19.0",
        "express": "^4.17.1",
        "express-handlebars": "^3.1.0"
    },
    "devDependencies": {
        "@babel/cli": "^7.6.0",
        "@mashroom/mashroom": "1.1.0",
        "@mashroom/mashroom-csrf-protection": "1.1.0",
        "@mashroom/mashroom-i18n": "1.1.0",
        "@mashroom/mashroom-security": "1.1.0",
        "eslint": "^6.4.0",
        "node-sass": "^4.12.0",
        "node-sass-tilde-importer": "^1.0.2",
        "nodemon": "^1.19.2"
    },
    "scripts": {
        "lint": "eslint src/js --fix",
        "dev": "nodemon --watch src -e js,scss --exec \"npm run build && node dist/server.js\"",
        "start": "node dist/server.js",
        "build": "babel src/js -d dist && node-sass --importer=node_modules/node-sass-tilde-importer --output-style compressed src/sass/style.scss dist/style.css"
    },
    "mashroom": {
        "devModeBuildScript": "build",
        "plugins": [
            {
                "name": "Mashroom Security Default Login Webapp",
                "type": "web-app",
                "bootstrap": "./dist/mashroom-bootstrap.js",
                "requires": [
                    "Mashroom Security Services",
                    "Mashroom Internationalization Services"
                ],
                "defaultConfig": {
                    "path": "/login",
                    "loginFormTitle": null,
                    "styleFile": null
                }
            }
        ]
    }
}
