{
    "name": "@mashroom/mashroom-portal-sandbox-app",
    "description": "This App can be used to load any other Portal App with a specific configuration and to interact with the App via Message Bus. Can also be used for end-2-end testing with tools such as Selenium.",
    "homepage": "https://www.mashroom-server.com",
    "repository": "github:nonblocking/mashroom",
    "license": "MIT",
    "version": "1.3.1",
    "sideEffects": false,
    "files": [
        "dist/**"
    ],
    "devDependencies": {
        "@babel/cli": "^7.8.3",
        "@mashroom/mashroom": "1.3.1",
        "@mashroom/mashroom-portal": "1.3.1",
        "@mashroom/mashroom-portal-ui-commons": "1.3.1",
        "duplicate-package-checker-webpack-plugin": "^3.0.0",
        "eslint": "^6.8.0",
        "jest": "^24.9.0",
        "react": "^16.12.0",
        "react-dom": "^16.12.0",
        "react-intl": "^3.11.0",
        "react-redux": "7.1.1",
        "redux": "^4.0.5",
        "redux-form": "^8.2.6",
        "webpack": "^4.41.5",
        "webpack-cli": "^3.3.10",
        "webpack-dev-server": "^3.10.1"
    },
    "jest": {
        "verbose": true,
        "testEnvironment": "node",
        "roots": [
            "<rootDir>/test"
        ],
        "testRegex": "(\\.(test|spec))\\.js$"
    },
    "scripts": {
        "lint": "eslint src --fix",
        "dev": "webpack-dev-server --mode development --hot",
        "build": "webpack --mode production --display-error-details"
    },
    "mashroom": {
        "devModeBuildScript": "build",
        "plugins": [
            {
                "name": "Mashroom Sandbox App",
                "type": "portal-app",
                "bootstrap": "startSandboxApp",
                "category": "Testing",
                "resources": {
                    "js": [
                        "bundle.js"
                    ],
                    "css": []
                },
                "defaultConfig": {
                    "resourcesRoot": "./dist",
                    "appConfig": {}
                }
            }
        ]
    }
}
