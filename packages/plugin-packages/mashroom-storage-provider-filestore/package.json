{
    "name": "@mashroom/mashroom-storage-provider-filestore",
    "description": "Simple Mashroom storage provider based on JSON files",
    "homepage": "https://www.mashroom-server.com",
    "repository": "github:nonblocking/mashroom",
    "license": "MIT",
    "version": "1.3.2",
    "files": [
        "dist/**"
    ],
    "dependencies": {
        "fs-extra": "^9.0.0",
        "lodash.filter": "^4.6.0",
        "proper-lockfile": "^4.1.1",
        "shortid": "^2.2.15"
    },
    "devDependencies": {
        "@babel/cli": "7.8.4",
        "@mashroom/mashroom": "1.3.2",
        "@mashroom/mashroom-storage": "1.3.2",
        "@mashroom/mashroom-utils": "1.3.2",
        "eslint": "6.3.0",
        "jest": "25.1.0"
    },
    "jest": {
        "verbose": true,
        "testEnvironment": "node",
        "roots": [
            "<rootDir>/test"
        ],
        "testRegex": "(\\.(test|spec))\\.js$"
    },
    "scripts": {
        "lint": "eslint src test --fix",
        "test": "jest",
        "build": "babel src -d dist"
    },
    "mashroom": {
        "devModeBuildScript": "build",
        "plugins": [
            {
                "name": "Mashroom Storage Filestore Provider",
                "type": "storage-provider",
                "bootstrap": "./dist/storage/mashroom-bootstrap.js",
                "defaultConfig": {
                    "dataFolder": "./data/storage"
                }
            }
        ]
    }
}
