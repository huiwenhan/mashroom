{
    "name": "@mashroom/mashroom-portal-iframe-app",
    "description": "App that shows an arbitrary page in an IFrame. With support for responsiveness.",
    "homepage": "https://www.mashroom-server.com",
    "repository": "github:nonblocking/mashroom",
    "license": "MIT",
    "version": "1.1.4",
    "sideEffects": false,
    "files": [
        "dist/**"
    ],
    "devDependencies": {
        "@babel/cli": "^7.6.0",
        "@mashroom/mashroom-portal": "1.1.4",
        "eslint": "^6.4.0",
        "jest": "^24.9.0",
        "webpack": "^4.39.3",
        "webpack-cli": "^3.3.8",
        "webpack-dev-server": "^3.8.0"
    },
    "jest": {
        "verbose": true,
        "testEnvironment": "node",
        "roots": [
            "<rootDir>/test"
        ],
        "testRegex": "(\\.(test|spec))\\.js$"
    },
    "scripts": {
        "lint": "eslint src",
        "dev": "webpack-dev-server  --mode development --hot",
        "build": "webpack --mode production --display-error-details"
    },
    "mashroom": {
        "devModeBuildScript": "build",
        "plugins": [
            {
                "name": "Mashroom Portal IFrame App",
                "title": "IFrame App",
                "type": "portal-app",
                "bootstrap": "startPortalIFrameApp",
                "category": "Content",
                "resources": {
                    "js": [
                        "bundle.js"
                    ],
                    "css": []
                },
                "defaultConfig": {
                    "resourcesRoot": "./dist",
                    "appConfig": {
                        "url": "https://en.wikipedia.org/wiki/Main_Page",
                        "width": "100%",
                        "defaultHeight": "80vh"
                    }
                }
            }
        ]
    }
}
