{
    "name": "@mashroom/mashroom-browser-cache",
    "description": "Mashroom services to control browser caching",
    "homepage": "https://www.mashroom-server.com",
    "repository": "github:nonblocking/mashroom",
    "license": "MIT",
    "version": "1.3.0",
    "files": [
        "dist/**",
        "type-definitions/*"
    ],
    "devDependencies": {
        "@babel/cli": "^7.8.3",
        "@mashroom/mashroom": "1.3.0",
        "@mashroom/mashroom-security": "1.3.0",
        "@mashroom/mashroom-utils": "1.3.0",
        "eslint": "^6.8.0",
        "jest": "^24.9.0"
    },
    "jest": {
        "verbose": true,
        "testEnvironment": "node",
        "roots": [
            "<rootDir>/test"
        ],
        "testRegex": "(\\.(test|spec))\\.js$"
    },
    "scripts": {
        "lint": "eslint src test --fix",
        "test": "jest",
        "build": "babel src -d dist"
    },
    "mashroom": {
        "devModeBuildScript": "build",
        "plugins": [
            {
                "name": "Mashroom Browser Cache Services",
                "type": "services",
                "namespace": "browserCache",
                "bootstrap": "./dist/mashroom-bootstrap-services.js",
                "defaultConfig": {
                    "disabled": false,
                    "disabledWhenAuthenticated": false,
                    "maxAgeSec": 1800
                }
            }
        ]
    }
}
