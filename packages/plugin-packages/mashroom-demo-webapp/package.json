{
    "name": "@mashroom/mashroom-demo-webapp",
    "description": "Demo express webapp that will be available at /demo/webapp",
    "homepage": "https://www.mashroom-server.com",
    "repository": "github:nonblocking/mashroom",
    "license": "MIT",
    "version": "1.2.3",
    "files": [
        "dist/**"
    ],
    "dependencies": {
        "express": "^4.17.1"
    },
    "devDependencies": {
        "@babel/cli": "^7.6.4",
        "@mashroom/mashroom": "1.2.3",
        "eslint": "^6.6.0",
        "nodemon": "^1.19.4"
    },
    "scripts": {
        "lint": "eslint src --fix",
        "build": "babel src -d dist",
        "start": "node dist/dev_server.js",
        "dev": "nodemon --watch src --exec \"npm run build && npm run start\""
    },
    "mashroom": {
        "devModeBuildScript": "build",
        "plugins": [
            {
                "name": "Mashroom Demo Webapp",
                "type": "web-app",
                "bootstrap": "./dist/mashroom-bootstrap.js",
                "defaultConfig": {
                    "path": "/demo/webapp"
                }
            }
        ]
    }
}
