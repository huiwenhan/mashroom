{
    "name": "@mashroom/mashroom-session",
    "description": "Session middleware with configurable provider",
    "homepage": "https://www.mashroom-server.com",
    "repository": "github:nonblocking/mashroom",
    "license": "MIT",
    "version": "1.4.5",
    "files": [
        "dist/**",
        "type-definitions/*"
    ],
    "dependencies": {
        "express-session": "^1.17.1"
    },
    "devDependencies": {
        "@mashroom/mashroom": "1.4.5",
        "@babel/cli": "^7.8.4",
        "eslint": "^7.0.0",
        "express": "^4.17.1",
        "@types/express": "^4.17.6",
        "@types/express-session": "^1.17.0",
        "typescript": "^3.8.3"
    },
    "scripts": {
        "lint": "eslint  src --ext '.ts' --fix",
        "type-check": "tsc --noEmit",
        "build": "babel src -d dist --extensions '.ts'"
    },
    "mashroom": {
        "devModeBuildScript": "build",
        "plugins": [
            {
                "name": "Mashroom Session Middleware",
                "type": "middleware",
                "bootstrap": "./dist/middleware/mashroom-bootstrap-middleware.js",
                "defaultConfig": {
                    "order": -100,
                    "provider": "memory",
                    "session": {
                        "secret": "pS2tZRCp5e3uU7RM",
                        "resave": false,
                        "saveUninitialized": false,
                        "cookie": {
                            "maxAge": 1200000,
                            "httpOnly": true,
                            "secure": false,
                            "sameSite": false
                        }
                    }
                }
            },
            {
                "name": "Mashroom Session Store Provider Loader",
                "type": "plugin-loader",
                "bootstrap": "./dist/plugins/loader/mashroom-bootstrap-plugin-loader.js",
                "loads": "session-store-provider"
            },
            {
                "name": "Mashroom Session Services",
                "type": "services",
                "namespace": "session",
                "bootstrap": "./dist/services/mashroom-bootstrap-services.js",
                "requires": [
                    "Mashroom Session Middleware"
                ]
            }
        ]
    }
}
