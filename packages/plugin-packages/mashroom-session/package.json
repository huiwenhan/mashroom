{
    "name": "@mashroom/mashroom-session",
    "description": "Session middleware with configurable provider",
    "homepage": "https://www.mashroom-server.com",
    "repository": "github:nonblocking/mashroom",
    "license": "MIT",
    "version": "1.3.1",
    "files": [
        "dist/**",
        "type-definitions/*"
    ],
    "dependencies": {
        "express-session": "^1.17.0"
    },
    "devDependencies": {
        "@babel/cli": "^7.8.3",
        "@mashroom/mashroom": "1.3.1",
        "eslint": "^6.8.0",
        "express": "^4.17.1"
    },
    "scripts": {
        "lint": "eslint src --fix",
        "build": "babel src -d dist"
    },
    "mashroom": {
        "devModeBuildScript": "build",
        "plugins": [
            {
                "name": "Mashroom Session Middleware",
                "type": "middleware",
                "bootstrap": "./dist/middleware/mashroom-bootstrap-middleware.js",
                "defaultConfig": {
                    "order": -100,
                    "provider": "memory",
                    "session": {
                        "secret": "keyboard cat",
                        "resave": false,
                        "saveUninitialized": true,
                        "cookie": {
                            "maxAge": 1200000,
                            "httpOnly": true,
                            "secure": false,
                            "sameSite": false
                        }
                    }
                }
            },
            {
                "name": "Mashroom Session Store Provider Loader",
                "type": "plugin-loader",
                "bootstrap": "./dist/plugins/loader/mashroom-bootstrap-session-store-provider-plugin-loader.js",
                "loads": "session-store-provider"
            }
        ]
    }
}
