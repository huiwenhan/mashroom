{
    "name": "@mashroom/mashroom-i18n",
    "description": "Mashroom internationalization service",
    "homepage": "https://www.mashroom-server.com",
    "repository": "github:nonblocking/mashroom",
    "license": "MIT",
    "version": "1.3.2",
    "files": [
        "dist/**",
        "messages/**",
        "type-definitions/*"
    ],
    "dependencies": {
        "accept-language-parser": "^1.5.0"
    },
    "devDependencies": {
        "@babel/cli": "^7.8.4",
        "@mashroom/mashroom": "1.3.2",
        "@mashroom/mashroom-utils": "1.3.2",
        "eslint": "^6.8.0",
        "jest": "^25.1.0"
    },
    "jest": {
        "verbose": true,
        "testEnvironment": "node",
        "roots": [
            "<rootDir>/test"
        ],
        "testRegex": "(\\.(test|spec))\\.js$"
    },
    "scripts": {
        "lint": "eslint src test --fix",
        "test": "jest",
        "build": "babel src -d dist"
    },
    "mashroom": {
        "devModeBuildScript": "build",
        "plugins": [
            {
                "name": "Mashroom Internationalization Services",
                "type": "services",
                "namespace": "i18n",
                "bootstrap": "./dist/mashroom-bootstrap-services.js",
                "requires": [
                    "Mashroom Session Middleware"
                ],
                "defaultConfig": {
                    "availableLanguages": [
                        "en"
                    ],
                    "defaultLanguage": "en",
                    "messages": "./messages"
                }
            }
        ]
    }
}
