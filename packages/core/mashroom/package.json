{
    "name": "@mashroom/mashroom",
    "description": "Mashroom Server. Supports out of the box the following plugin types: 'web-app', 'api', 'middleware', 'static', 'services' and 'plugin-loader'.",
    "homepage": "https://www.mashroom-server.com",
    "repository": "github:nonblocking/mashroom",
    "license": "MIT",
    "version": "1.3.2",
    "main": "dist",
    "files": [
        "dist/**",
        "type-definitions/*"
    ],
    "engines": {
        "node": ">=10.0.0"
    },
    "bin": {
        "mashroom": "./dist/server.js"
    },
    "dependencies": {
        "@mashroom/mashroom-utils": "^1.3.2",
        "chokidar": "^3.3.1",
        "express": "^4.17.1",
        "fs-extra": "^9.0.0",
        "log4js": "^6.1.2",
        "minimist": "^1.2.5",
        "strip-ansi": "^6.0.0"
    },
    "devDependencies": {
        "@babel/cli": "^7.8.4",
        "@types/express": "^4.17.3",
        "@types/node": "^10.17.17",
        "eslint": "^6.8.0",
        "jest": "^25.1.0"
    },
    "jest": {
        "verbose": true,
        "testEnvironment": "node",
        "roots": [
            "<rootDir>/test"
        ],
        "testRegex": "(\\.(test|spec))\\.js$"
    },
    "scripts": {
        "lint": "eslint src test --fix",
        "test": "jest --detectOpenHandles",
        "build": "babel src -d dist",
        "start": "node dist/server.js"
    }
}
